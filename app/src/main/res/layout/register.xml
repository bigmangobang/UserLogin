<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/log2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#232020"
        android:text="注册账号"
        android:textColor="#fffafa"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/resetpwd_edit_name"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:hint="请输入您的用户名" />

    <EditText
        android:id="@+id/resetpwd_edit_pwd_old"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="请输入您的密码"
        android:inputType="textPassword" />


    <EditText
        android:id="@+id/resetpwd_edit_pwd_new"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:background="@drawable/login_edit"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="请确认您的密码"
        android:inputType="textPassword" />

    <EditText
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:drawableLeft="@android:drawable/ic_dialog_info"
        android:hint="请输入手机号"
        android:inputType="phone" />

    <Button
        android:id="@+id/register_btn_sure"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:layout_marginTop="20dp"
        android:alpha="0.8"
        android:background="@drawable/login_button"
        android:text="注     册"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/register_btn_cancel"
        android:layout_width="340sp"
        android:layout_height="60sp"
        android:layout_marginTop="10dp"
        android:alpha="0.8"
        android:background="@drawable/login_button"
        android:text="返     回"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>