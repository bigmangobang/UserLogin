<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/log1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#232020"
        android:text="修改密码"
        android:textColor="#fffafa"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/resetpwd_edit_name"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_menu_myplaces"
        android:hint="请输入用户名" />

    <EditText
        android:id="@+id/resetpwd_edit_pwd_old"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="输入旧密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/resetpwd_edit_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="输入新密码"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/resetpwd_edit_check"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:drawableLeft="@android:drawable/ic_lock_idle_lock"
        android:hint="确认新密码"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/resetpwd_btn_sure"
        android:layout_width="330sp"
        android:layout_height="60sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button"
        android:onClick="sure_to_reset"
        android:text="确    定"
        android:textColor="#ffffff"
        android:textSize="20dp" />

    <Button
        android:id="@+id/resetpwd_btn_cancel"
        android:layout_width="330sp"
        android:layout_height="60sp"
        android:layout_marginTop="20dp"
        android:background="@drawable/login_button"
        android:onClick="not_to_reset"
        android:text="取    消"
        android:textColor="#ffffff"
        android:textSize="20dp" />
</LinearLayout>