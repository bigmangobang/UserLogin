<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Zone">

    <ScrollView
        android:id="@+id/word_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:background="@drawable/zhang"
                android:scaleType="fitCenter" />

            <TextView
                android:id="@+id/back"
                android:layout_width="20sp"
                android:layout_height="30sp"
                android:layout_marginLeft="10sp"
                android:layout_marginTop="10sp"
                android:background="@drawable/btn_back"
                android:gravity="center"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/name_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/img"
                android:layout_alignBottom="@+id/img"
                android:textColor="#000000"
                android:text="asdfasdfasdfadfasdfasd"/>

            <ListView
                android:id="@+id/word_lv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img" />

            <RelativeLayout
                android:id="@+id/lay_1"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/word_lv">

                <TextView
                    android:id="@+id/back1"
                    android:layout_width="20sp"
                    android:layout_height="30sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:background="@drawable/btn_back"
                    android:gravity="center"
                    android:textColor="#ffffff"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:layout_toRightOf="@+id/back1"
                    android:text="发表文字"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="10sp"
                    android:text="发表"
                    android:textColor="#1e9f24"
                    android:textSize="25sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/wenzi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay_1"
                android:background="@drawable/login_edit"
                android:gravity="start"
                android:hint="这一刻的想法"
                android:lines="80" />

        </RelativeLayout>


    </ScrollView>


</RelativeLayout>